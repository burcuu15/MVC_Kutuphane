@using System.Web;
@using System.Web.Mvc
@model MVC_KUTUPHANE.Models.Entity.TblKitap
@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        @*htmlhelper kullanımı*@
    </div>
    <div style="margin-top:15px">
        <label>Kitap Kategori</label>
        @Html.DropDownListFor(k => k.TblKategori.ID, (List<SelectListItem>)ViewBag.dgr1,
          new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Yazar </label>
        @Html.DropDownListFor(k => k.TblYazar.ID, (List<SelectListItem>)ViewBag.dgr2,
          new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Basım Yılı </label>
        @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Yayınevi </label>
        @Html.DropDownListFor(k => k.TblYayinevi.ID, (List<SelectListItem>)ViewBag.dgr3,
          new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Sayfa Sayısı </label>
        @Html.TextBoxFor(k => k.SAYFA, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Adedi</label>
        @Html.TextBoxFor(k => k.ADET, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Kitap Ekle</button>
    </div>
    <input type="hidden" name="Durum" value="True" />
</form>


