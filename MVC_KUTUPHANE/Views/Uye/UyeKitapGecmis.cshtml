@using MVC_KUTUPHANE.Models.Entity;
@model List<TblHareket>
@{
    ViewBag.Title = "UyeKitapGecmis";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>@ViewBag.u1</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.TblKitap.AD</td>
    <td>@x.TblPersonel.PERSONEL</td>
    <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
    <td>@Convert.ToDateTime(x.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>

</tr>
    }
</table>
