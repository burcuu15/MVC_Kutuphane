@model MVC_KUTUPHANE.Models.Entity.TblUyeler
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UyeGuncelle", "Uye", FormMethod.Post))
{
    <div sytle="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <div sytle="margin-top:15px">
            <label>Üye Adı</label>
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
        </div>
        <br />
        <div sytle="margin-top:15px">
            <label>Üye Soyadı</label>
            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
        </div>
        <br />
        <div sytle="margin-top:15px">
            <label>Kulanıcı Adı</label>
            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
        </div>
        <br />
        <div sytle="margin-top:15px">
            <label>Şifre</label>
            @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
        </div>
        <br />
        <div sytle="margin-top:15px">
            <label>Mail </label>
            @Html.TextBoxFor(x => x.MAIL, new { @class = "form-control" })
        </div>
        <br />
        <div sytle="margin-top:15px">
            <label>Okul</label>
            @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
        </div>
        <br />
        <div sytle="margin-top:15px">
            <label>Telefon</label>
            @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control" })
        </div>
        <br />
        <div sytle="margin-top:15px">
            <label>Fotoğraf Linki</label>
            @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control" })
        </div>
        <div sytle="margin-top:15px">
            <label>Doğum Tarihi</label>
            @Html.TextBoxFor(x => x.DOGUMTARIHI, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

