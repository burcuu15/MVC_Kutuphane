@using MVC_KUTUPHANE.Models.Entity
@model List<TblYazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>
            <td>
                @Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new
       { @class = "btn btn-warning", onclick = "return confirm('Silmek istiyor musunuz?')" })
        </td>
        <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-danger">Güncelle</a></td>
        <td><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-success" style="background-color:darkorange; color:white;">Yazarın Kitapları</a></td>
    </tr>
}
</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>

