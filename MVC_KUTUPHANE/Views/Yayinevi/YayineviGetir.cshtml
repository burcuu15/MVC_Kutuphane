@model MVC_KUTUPHANE.Models.Entity.TblYayinevi
@{
    ViewBag.Title = "YayineviGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("YayineviGuncelle", "Yayinevi", FormMethod.Post))
{
    <div sytle="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Yayınevi ID</label>
            @Html.TextBoxFor(y => y.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yayınevi</label>
            @Html.TextBoxFor(y => y.YAYINEVI, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Yayınevi Bilgilerini Güncelle</button>
     </div>
}