@model MVC_KUTUPHANE.Models.Entity.TblHareket
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Üye ID</label>
        @Html.DropDownListFor(k=>k.TblUyeler.ID,(List<SelectListItem>)ViewBag.dgr1, 
        new {@class = "form-control"})
        @*@Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })*@
        @*htmlhelper kullanımı*@
    </div>
    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @Html.DropDownListFor(k => k.TblKitap.ID, (List<SelectListItem>)ViewBag.dgr2,
        new { @class = "form-control" })
        @*@Html.TextBoxFor(k => k.KITAP, new { @class = "form-control" })*@
    </div>
    <div style="margin-top:15px">
        <label>Personel ID</label>
        @Html.DropDownListFor(k => k.TblPersonel.ID, (List<SelectListItem>)ViewBag.dgr3,
        new { @class = "form-control" })
        @*@Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })*@
    </div>
    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(14).ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" style="background-color:olivedrab;
          color:white">
            Kitabı Ödünç Ver
        </button>
        @*@Html.HiddenFor(model => model.ISLEMDURUM)*@
        <input type="hidden" value="False" name="ISLEMDURUM" />
    </div>
</form>


